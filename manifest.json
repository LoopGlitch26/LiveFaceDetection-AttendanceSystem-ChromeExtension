{
    "name": "Attendance System",
    "description": "my extension",
    "version": "0.1.0",
    "manifest_version": 2,
    "icons": {
        "16": "./security-16x16.png",
        "32": "./security-32x32.png",
        "64": "./security-64x64.png",
        "128": "./security-128x128.png"
    },
    "background": {
        "scripts": ["./background.js", "./recognition/onPlay.js"]
    },
    "options_page": "./options.html",
    "browser_action": {
        "default_popup": "./popup.html"
    },
    "permissions": [
        "tabs",
        "https://www.google.com/"
    ],
    "content_security_policy": "script-src 'self' https://cdn.firebase.com https://apis.google.com https://www.gstatic.com; object-src 'self'"
}